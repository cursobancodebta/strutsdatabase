<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true" />

    <package name="loginSample" extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="login" class="com.bancodebogota.fdsm.controller.LoginAction" method="executeJpa">
            <result name="success">/welcome.jsp</result>
            <result name="error">/loginErr.jsp</result>
            <result name="input">/index.jsp</result>
            <result name="successTiles" type="tiles">welcome-tiles</result>
        </action>
        

    </package>
                  

</struts>